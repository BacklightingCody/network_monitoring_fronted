{
  "include": [
    "src/**/*",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "baseUrl": ".", // 项目的根目录
    "target": "esNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "allowImportingTsExtensions":true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}